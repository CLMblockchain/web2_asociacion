---
import Experience from "../components/Experience.astro";
import { EXPERIENCE } from "../data/experience";
import ArrowLeft from "../icons/arrow-left.astro";
---

<input id="experience-drawer" type="checkbox" class="drawer-toggle" />
<div
  class="drawer-side scrollbar scrollbar-thumb-pink-700 scrollbar-track-pink-300"
>
  <label
    for="experience-drawer"
    aria-label="close sidebar"
    class="drawer-overlay"></label>
  <div
    class="bg-stone-100 min-h-full lg:w-2/4 md:w-full sm:w-full p-10 relative"
  >
    <div
      class="inline-flex absolute top-0 left-0 justify-between px-6 py-4 w-full"
    >
      <label
        for="experience-drawer"
        aria-label="close sidebar"
        data-ccursor
        class="flex items-center justify-center rounded-md group"
      >
        <ArrowLeft />
      </label>
      <a
        data-ccursor
        class="leading-tight font-semibold group p-2 rounded px-3 text-pink-400 sm:text-zinc-600 sm:hover:text-pink-400"
        aria-label="View Full Résumé"
        target="_blank"
        rel="noreferrer noopener"
        aria-label="Documetno Notion de A.B.CLM"
        href="https://www.notion.so/10c502a702cc8092bb85ca8870f9a4e2?v=10c502a702cc8069b8bc000c47810d17&pvs=4"
        data-umami-event="Documento Notion de A.B.CLM"
        id="resume"
      >
        <span class="font-roboto-condensed font-semibold">Notion CLM</span
        >
      </a>
    </div>
    <section
      id="experience"
      class="mt-10 mb-16 scroll-mt-16 md:mb-24 lg:mb-36 lg:scroll-mt-24"
      aria-label="Blog y Eventos"
    >
      <ol class="group/list space-y-12">
        {EXPERIENCE.map((experience) => <Experience {...experience} />)}
      </ol>
    </section>
  </div>
</div>
